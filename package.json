{
  "name": "@psdevs/js-utils",
  "version": "1.0.0",
  "description": "Some handy javascript utilities we use 👨‍💻👩‍💻",
  "main": "index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "rollup --config rollup.config.js --watch",
    "test": "jest",
    "test-ci": "jest --coverage && coveralls < coverage/lcov.info",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch:coverage": "jest --watch --coverage",
    "build:doc": "jsdoc2md --files src/**/*.ts --configure ./jsdoc2md.json | sed '/\\*\\*Kind\\*\\*/d' > README.md",
    "lint": "eslint src --ext .ts,.tsx --max-warnings=0",
    "tsc": "./node_modules/typescript/bin/tsc --noEmit",
    "validate": "npm run lint && npm run tsc",
    "prepublishOnly": "npm run validate"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utilities",
    "utils",
    "frontend"
  ],
  "contributors": [
    "Chris Vandenberg <chris@altruisticsoftware.com>"
  ],
  "license": "ISC",
  "prettier": "@psdevs/prettier-config",
  "eslintConfig": {
    "extends": "@psdevs/eslint-config"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@psdevs/eslint-config": "^2.0.0",
    "@psdevs/prettier-config": "^1.0.4",
    "@types/jest": "^25.2.3",
    "coveralls": "^3.1.0",
    "jest": "^26.0.1",
    "jsdoc-babel": "^0.5.0",
    "jsdoc-to-markdown": "^5.0.3",
    "rollup": "^2.10.7",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.1",
    "ts-jest": "^26.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  }
}
